<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="403dp"
                 android:layout_height="299dp"
                 android:rowCount="3"
                 android:columnCount="2"
                 android:visibility="visible"

                 android:id="@+id/tableLayout"
                 android:layout_gravity="center"
                 android:layout_centerInParent="true"
                 tools:ignore="MissingConstraints"
                 android:layout_marginTop="24dp"
                 app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp">

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:gravity="center">
            <Button
                    android:layout_width="133dp"
                    android:layout_height="133dp" android:id="@+id/newsFeedButton" android:text="News Feed"/>
            <Button
                    android:text="Profil"
                    android:layout_width="133dp"
                    android:layout_height="133dp" android:id="@+id/profilButton"/>
        </TableRow>
        <TableRow android:layout_height="131dp"
                  android:layout_width="match_parent" android:gravity="center">
            <Button
                    android:text="Post"
                    android:layout_width="133dp"
                    android:layout_height="133dp" android:id="@+id/postButton"/>
            <Button
                    android:text="Option"
                    android:layout_width="133dp"
                    android:layout_height="133dp" android:id="@+id/optionButton"/>
        </TableRow>
    </TableLayout>




    <Button
            android:text="DÃ©conexion"
            android:layout_width="120dp"
            android:layout_height="58dp"
            android:id="@+id/buttonDeco"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="154dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="170dp"
            android:textColor="@color/colorPrimaryDark" android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.515"/>
    <TextView
            android:text="Would you rather ? "
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/title" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:fontFamily="sans-serif-black" android:textSize="24sp"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:textAlignment="center"/>


</android.support.constraint.ConstraintLayout>